doctype html
html
   head
      meta(charset='utf-8')
      title= title
      script(src = "/javascripts/jquery.js")
      script(src="/javascripts/newQuizzScripts.js")
   body(align='center')
      h1='New Quizz'
      br
      br
      form(name="newQuizz", action="/quizz", method="post")
         table#MyTable(border=1,align='center',style='box')
            tr
               td(colspan='2')
                  input#name(type=text,value='Quizz name')
            tr
               td(colspan='2')
                  select#category
                     each category in categories
                        option(value=category.id)=category.name
            each val in [1,2,3,4,5]
               tr
                  td
                     p=val+'.'
                  td
                     input(type=text,value='Question text',id='q'+val+'text')
               tr
                  td(colspan='2')
                     p='A.'
                        input(type=text,value='Correct answer text',width='100%',id='q'+val+'correct')
                     each val, index in {1:'B',2:'C',3:'D'}
                        p=val+"."
                           input(type=text,value='Answer '+index+' text',id='q'+index+'answer'+val)

         input(type='button',onclick='extend()',value='Add Question')
         input(type='submit',onclick='check()')